<% agencies.each do |agency| %>

<div class="well">
<h4 class="text-center">
<%= link_to agency.organisation_name.strip, "http://#{agency.website.strip}", :target => "_blank" %>
</h4>
<address class="text-center">
  <%= agency.address %></address>

<% agency.service_methods.each do |service_method| %>
<% if service_method.service_method_name == "Telephone" %>
<p class="bg-info text-center"><%= service_method.service_method_name %>: <%= service_method.phone_number %></p>
<% elsif service_method.service_method_name == "Internet" %>
<p class="bg-info text-center"><%= service_method.service_method_name %>: <%= service_method.web_site_url %></p>
<% elsif service_method.service_method_name == "Internet and Telephone" %>
<p class="bg-info text-center">Internet/Telephone: <%= service_method.web_site_url %>/<%= service_method.phone_number %></p>
<% elsif service_method.service_method_name == "In Person" %>
<p class="bg-info text-center"><%= service_method.service_method_name %>: <%= service_method.in_person_address %></p>

<% end %>
<% end %>
</div>

<% end %>

<div class="col-md-12 text-center">
	<%= paginate(agencies, :theme => 'twitter-bootstrap-3',:pagination_class => "pagination-sm text-center") %>
</div>
<hr/>